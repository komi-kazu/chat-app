  <div class="chat-box">
    <div class="chat-name-create_at">
      <div class="chat-name">
        <%= message.user.name %>
      </div>
      <div class="chat-create_at">
        <%= l message.created_at %>
      </div>
    </div>
    <div class="chat-text">
      <div class="chat-text-content">
        <%= message.content %>
      </div>
      <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
    </div>
  </div>